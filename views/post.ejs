<%- include('partials/header', { title:  post.title  }) %>


    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><%= post.title %></h3>
                <p class="card-text"><%= post.content %></p>
                <a href="/editpost/<%= post.id %>" class="btn btn-warning">Edit</a>
                <form action="/deletepost/<%= post.id %>?_method=DELETE" method="post">
                    <!-- <input class="custom-submit" type="submit" name="_method" value="DELETE"> -->
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')" >Delete</button>
                  </form>
                <a href="/" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <%- include('partials/footer') %>
